{% extends 'overall/layout' %}
{% block appHead %}
	<link rel="stylesheet" href="views/app/plugins/css/jquery-confirm.min.css">
{% endblock %}
{% block appBody %}
    <div class="container">
        <form role="form" id="administrar_form">
			<div class="form-group">
				<input type="hidden" name="id_platos" value="{{ data.id_platos }}" />
				<label for="">Categoria</label>
				<select name="categoria">
					<option value="entrantes">entrante</option>
					<option value="carnes">carnes</option>
					<option value="mariscos">mariscos</option>
					<option value="pescados">pescados</option>
					<option value="parrillada mariscos pescados">parrillada mariscos pescados</option>
					<option value="cuchara">cuchara</option>
					<option value="menucasa">menucasa</option>
				</select><br>
				<label for="">Plato</label>
				<input type="text" class="form-control" placeholder="nombre del plato"  name="plato" required>
				<label for="">precio</label>
				<input type="text" class="form-control" placeholder="precio (opcional)" ="precio" name="precio">
				<label for="">descripcion</label>
				<textarea class="form-control" placeholder="descripcion (opcional)"  name="descripcion" onkeypress="event.cancelBubble=true;"></textarea>
			</div>


            <div class="form-group">
                <button type="button" class="btn btn-success" id="administrar">Crear nuevo</button>
                <a href="administrar/" class="btn btn-primary">Atr√°s</a>
            </div>
        </form>
    </div>
{% endblock %}
{% block appFooter %}
	<script src="views/app/plugins/js/jquery-confirm.min.js"></script>
    <script src="views/app/js/administrar/crear.js"></script>
{% endblock %}